{
  "mcpServers": {
    "graph-rag-obsidian": {
      "command": "uvx",
      "args": ["--python", "3.13", "--from", "git+https://github.com/ferparra/graph-rag-mcp-server", "graph-rag-mcp-stdio"],
      "env": {
        "GEMINI_API_KEY": "YOUR_GEMINI_API_KEY_HERE",
        "OBSIDIAN_VAULT_PATH": "/Users/YOUR_USERNAME/Library/Mobile Documents/iCloud~md~obsidian/Documents/YOUR_VAULT",
        "OBSIDIAN_RAG_CHUNK_STRATEGY": "semantic",
        "MCP_LOG_LEVEL": "INFO"
      }
    },
    "graph-rag-obsidian-http": {
      "type": "http",
      "url": "http://localhost:8765",
      "headers": {
        "Authorization": "Bearer optional-token"
      }
    }
  }
}
